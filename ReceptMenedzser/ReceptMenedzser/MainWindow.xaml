<Window x:Class="ReceptMenedzser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReceptMenedzser"
        mc:Ignorable="d"
        Title="MainWindow" Height="458.894" Width="787.336" Icon="Cook.ico">

    <Grid Margin="0,0,2,-21">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="338*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="724*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_Excel_Import" Content="Excel_Import" HorizontalAlignment="Right" Margin="0,0,0,213" Width="126" Grid.Column="1" Grid.Row="1" Height="35" VerticalAlignment="Bottom" Click="btn_Excel_Import_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_History" Content="Törtenet" HorizontalAlignment="Right" Margin="0,0,0,133" Width="126" Grid.Column="1" Grid.Row="1" Height="35" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="btn_History_Click"/>
        <Button x:Name="btn_Help" Content="Help" HorizontalAlignment="Right" Margin="0,0,0,94" Width="126" Grid.Column="1" Grid.Row="1" Height="35" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="btn_Help_Click"/>
        <Button x:Name="btn_SendMail" Content="Levélküldés" HorizontalAlignment="Right" Margin="0,0,0,173" Width="126" Grid.Column="1" Grid.Row="1" Height="35" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Click="btn_SendMail_Click"/>
        <DataGrid x:Name="dataGrid" RenderTransformOrigin="-0.615,-2.527" Grid.Column="1" Margin="173,36,92,17" Grid.Row="1" Loaded="dataGrid_Loaded" MouseDoubleClick="dataGrid_MouseDoubleClick"/>
        <Image x:Name="KZK_logo_png" Source="KZK_logo.png" Stretch="Fill" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Width="126" Height="72" VerticalAlignment="Bottom" Margin="0,0,0,17" Grid.ColumnSpan="2" MouseUp="KZK_logo_png_MouseUp"/>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Margin="5,36,0,17" Width="163" Grid.ColumnSpan="2" Grid.Row="1" MouseUp="treeView_MouseUp"></TreeView>
        <ComboBox x:Name="comboB_GroupSelect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Width="163" RenderTransformOrigin="0.289,-0.807" Height="21" Grid.Row="1"/>
        <ComboBox x:Name="comboB_SubGroupSelect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="173,10,0,0" VerticalAlignment="Top" Width="143" Height="21" Grid.Row="1"/>
        <Button x:Name="btn_SearchInFoodName" Grid.ColumnSpan="2" Content="Kereses" HorizontalAlignment="Left" Margin="571,10,0,0" VerticalAlignment="Top" Width="76" Height="20" Grid.Row="1" Click="btn_SearchInFoodName_Click"/>
        <TextBox x:Name="textB_SearchInFoodName" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="21" Margin="446,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Image x:Name="img_Food" Grid.ColumnSpan="3" HorizontalAlignment="Right" Height="72" Margin="0,36,22,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="80"/>
        <ComboBox x:Name="comboB_MainIngredientSelect" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="321,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
